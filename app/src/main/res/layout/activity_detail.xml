<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/Linear1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/room1"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:src="@drawable/room1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Linear2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Linear1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="서울시 광진구 구의동"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text1"
                    android:layout_marginLeft="20dp"
                    android:text="월세 500/40"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text2"
                    android:layout_marginLeft="20dp"
                    android:text="관리비 2만원"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:text="2일 전"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text4"
                    android:layout_alignRight="@id/text4"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#F17149"
                    android:clickable="false"
                    android:padding="0dp"
                    android:text="거래중"
                    android:textColor="@color/white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_below="@id/text3"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="#ACAEAC" />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/Linear3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Linear2">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="구조"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text5"
                    android:layout_marginLeft="20dp"
                    android:text="면적"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text6"
                    android:layout_marginLeft="20dp"
                    android:text="층 수"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text7"
                    android:layout_marginLeft="20dp"
                    android:text="집주인 연락처"
                    android:textSize="15dp"
                    android:textColor="#E91E63"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/text8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/phone"
                    android:layout_marginLeft="20dp"
                    android:text="옵션 정보"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_toRightOf="@id/text5"
                    android:text="오픈형 원룸"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/text10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text9"
                    android:layout_marginLeft="55dp"
                    android:layout_toRightOf="@id/text6"
                    android:text="7평"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/text11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text10"
                    android:layout_marginLeft="55dp"
                    android:layout_toRightOf="@id/text6"
                    android:text="5층"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/phonenumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text11"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/phone"
                    android:text="010-1234-5678"
                    android:textColor="#E91E63"
                    android:textSize="15dp" />

                <GridView
                    android:id="@+id/options"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@id/text8"
                    android:numColumns="3">

                </GridView>

                <!--
                <ToggleButton
                    android:id="@+id/toggle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text8"
                    android:layout_alignLeft="@id/text8"
                    android:backgroundTint="@color/white"
                    android:textOff="세탁기"
                    android:textOn="세탁기"/>

                <ToggleButton
                    android:id="@+id/toggle3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/toggle2"
                    android:layout_alignBottom="@id/toggle2"
                    android:backgroundTint="@color/white"
                    android:layout_marginLeft="20dp"
                    android:textOff="냉장고"
                    android:textOn="냉장고"/>
                   -->


            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/contentLine"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_below="@id/Linear3"
            android:layout_marginVertical="8dp"
            android:background="#ACAEAC" />

        <LinearLayout
            android:id="@+id/Linear4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contentLine">

            <TextView
                android:id="@+id/review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="역에서 도보 5분거리의 저렴한 원룸이에요. \n신축이라서 깔끔하고 방음도 잘되더라구요!"
                android:textSize="20dp" />
        </LinearLayout>

        <View
            android:id="@+id/commentLine2"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_below="@id/Linear4"
            android:layout_marginTop="8dp"
            android:background="#ACAEAC" />

        <LinearLayout
            android:id="@+id/Linear5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/commentLine2">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp">

                <EditText
                    android:id="@+id/commentContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/border"
                    android:hint="   댓글을 작성해주세요 \n \n"></EditText>

                <Button
                    android:id="@+id/commentBtn"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="right|bottom"
                    android:backgroundTint="#F17149"
                    android:text="등록"
                    android:textColor="@color/white"
                    android:textSize="15dp" />
            </FrameLayout>
        </LinearLayout>

        <View
            android:id="@+id/commentLine"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_below="@id/Linear5"
            android:layout_marginTop="8dp"
            android:background="#ACAEAC" />


        <ListView
            android:id="@+id/commentList"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/commentLine">
        </ListView>


    </RelativeLayout>

</ScrollView>